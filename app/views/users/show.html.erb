  <div class="container">
    <div class="row">
      <div class="col-sm-4">
        <div class="post">
          <div class="image"><a href="#">
            <% user_photo = @user.facebook_picture_url || (@user.photo? ? cl_image_path( @user.photo.path, :crop => "fill") : "http://via.placeholder.com/350x150") %>
            <%= cl_image_tag user_photo, class: "img-responsive" %>
            <h1><%= @user.first_name%></h1>
          </div>
        </div>
        </div>
        <div class="col-sm-4">
          <div class="post">
            <div class="image">
            </div>
          </div>
        </div>
          <div class="col-sm-4">
            <div class="post">
              <div class="image">
              </div>
                <% if @user.role_cleaner? %>
                <h1><%= @user.hourly_rate %>â‚¬ <sup>/h</sup> </h1>
                <h3><i class="pe-7s-piggy"></i>-50% discount for additional hours</h3>
                <p class="post__intro">
                  <input type="date" name="date">
                </p>
                <p> <%= link_to "Book cleaning", new_user_booking_path(@user.id), class: "btn btn-ghost" %></p>
